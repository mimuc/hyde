{
  "compilerOptions": {
		"module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "../dist/vsc/",
		"target": "ES2020",
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "../",
    "moduleResolution": "Node",
    "rootDir": "./src",
		"lib": [
			"ES2020"
		],
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*"
  ]
}